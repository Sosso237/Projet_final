<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Edit_profile">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="283dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="7dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_iconmonstr_log_out_1"
        android:text="Disconnected"
        android:textColor="#FAF6F6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text_name"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="35dp"
        android:text="Name (*)"
        android:textColor="#F8F1F1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Text_pseudo"
        app:layout_constraintEnd_toStartOf="@+id/Text_Name_user"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Text_pseudo"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="46dp"
        android:text="Pseudo"
        android:textColor="#FAF5F5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Text_mail"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Text_current_password"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="69dp"
        android:text="Current Password (*)"
        android:textColor="#F4F1F1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Text_new_password"
        app:layout_constraintEnd_toStartOf="@+id/CurrentPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Text_new_password"
        android:layout_width="121dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="88dp"
        android:text="New Password"
        android:textColor="#F1E9E9"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/go_back"
        app:layout_constraintEnd_toStartOf="@+id/editNewPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Text_Name_user"
        android:layout_width="199dp"
        android:layout_height="33dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        android:textColor="#F6F4F4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="93dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FAF8F8"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/update"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="197dp"
        android:layout_height="42dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FAF7F7"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailAddress"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="Back"
        android:textColor="#F4F3F3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/update"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="Save and quit"
        android:textColor="#FAF7F7"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="61dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#F8F5F5"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/CurrentPassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Text_mail"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="61dp"
        android:text="Email (*)"
        android:textColor="#FBF5F5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Text_current_password"
        app:layout_constraintEnd_toStartOf="@+id/editTextEmailAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Label_message"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="44dp"
        android:text="Update your profile"
        android:textColor="#F8F5F5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Text_Name_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/CurrentPassword"
        android:layout_width="211dp"
        android:layout_height="44dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="63dp"
        android:text="TextView"
        android:textColor="#FAF6F6"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editNewPassword"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>