<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Main_menu">

    <TextView
        android:id="@+id/welcome_user"
        android:layout_width="184dp"
        android:layout_height="30dp"
        android:layout_marginStart="131dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="92dp"
        android:text="Welcome"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_property"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_property"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="81dp"
        android:background="@android:color/transparent"
        android:text="Add a property"
        android:textAlignment="viewStart"
        android:textColor="#FAF7F7"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/delete_property"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete_property"
        android:layout_width="154dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="68dp"
        android:background="@android:color/transparent"
        android:text="Delete a property"
        android:textAlignment="viewStart"
        android:textColor="#F6F0F0"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/search"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/display_properties"
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        android:text="Display Poperties"
        android:textAlignment="viewStart"
        android:textColor="#F4F0F0"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_property"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/edit_property"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="65dp"
        android:background="@android:color/transparent"
        android:text="Edit Property"
        android:textAlignment="viewStart"
        android:textColor="#F6F5F5"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/search"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="92dp"
        android:background="@android:color/transparent"
        android:text="SEARCH"
        android:textAlignment="viewStart"
        android:textColor="#FAF6F6"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/back_from_menu"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="96dp"
        android:background="@android:color/transparent"
        android:text="Edit your profile"
        android:textAlignment="viewStart"
        android:textColor="#FBFAFA"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/back_from_menu"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back_from_menu"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent"
        android:text="Back"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deconnected"
        android:layout_width="131dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="69dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_iconmonstr_log_out_1"
        android:text="Disconnected"
        android:textColor="#F3F1F1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/welcome_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>